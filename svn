alias svnaddall='svn status | grep "^\?" | awk "{print $2}" | xargs svn add'
alias svnremoveall='svn status | grep "^\!" | sed "s/! *//" | xargs -I% svn rm %'
alias svnlog='svn log -q -v --xml --with-all-revprops -l 6 | egrep "(msg|author|date)" | sed -e "s/<msg>\([^<]*\)<\/msg>/\1/g" | sed -e "s/<date>\([^<]*\)<\/date>/\1/g" | sed -e "s/<author>\([^<]*\)<\/author>/-------------------\n\1/g"'